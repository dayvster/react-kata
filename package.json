{
  "name": "@yourname/react-utils",
  "version": "0.1.0",
  "description": "A collection of useful React hooks and utilities",
  "author": "Your Name",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./useDebounce": {
      "import": "./dist/useDebounce.mjs",
      "require": "./dist/useDebounce.js",
      "types": "./dist/useDebounce.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/**/*.ts --format cjs,esm --dts",
    "dev": "tsup src/**/*.ts --watch --format cjs,esm --dts",
    "test": "jest --env=jsdom --testMatch '**/tests/**/*.test.tsx'"
  },
  "peerDependencies": {
    "react": ">=18.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "ts-jest": "^29.4.4",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  }
}
